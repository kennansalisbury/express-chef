<div class="d-flex justify-content-around">
  <div>
    <h1>Sign Up with Email</h1>
        
    <form method="POST" action="/auth/signup" > 
      <div class="form-group">
        <input id="firstname" type="text" class="form-control validate" name="firstname" value="<%=data.firstname%>">
        <label for="firstname">First Name</label>
      </div>

      <div class="form-group">
        <input id="lastname" type="text" class="form-control validate" name="lastname" value="<%=data.lastname%>">
        <label for="lastname">Last Name</label>
      </div>

      <div class="form-group">
        <input id="email" type="email" class="form-control validate" name="email" value="<%=data.email%>">
        <label for="email">Email</label>
      </div>

      <div class="form-group">
        <input id="password" type="password" class="form-control validate" name="password">
        <label for="password">Password</label>
      </div>

      <div class="form-group">
        <input id="ver_password" type="password" class="form-control validate" name="ver_password">
        <label for="ver_password">Verify Password</label>
      </div>

      <button type="submit" class="btn btn-dark">Sign Up</button>

    </form>
  </div>

  <div class="text-center">
    <h1>Login with Facebook</h1>

      <a href="/auth/facebook" class="btn btn-primary" >Facebook Login <i class="fa fa-facebook" aria-hidden="true"></i></a>

  </div>

</div>