<h1 class="text-secondary">Your <span class="text-dark"><%=category.name%></span> recipes </h1>

<a class="btn btn-info mb-1" href="/categories">View All Categories</a>
<a class="btn btn-info mb-1" href="/recipes">View All Saved Recipes</a>

<%if(!recipes.length){%>
    <p>No recipes saved in this category currently</p>
<%} else {%>

<% recipes.forEach(recipe => { %>
    <div class="card mb-3" style="max-width: 640px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="<%=recipe.imageUrl%>" class="card-img img-fluid" alt="<%= recipe.title %>-img">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= recipe.title %></h5>
                    <p class="card-text"><%= recipe.source %></p>
                    <a href="/recipes/<%= recipe.id%>" class="btn btn-secondary">View Full Recipe</a>
                </div>
            </div>
        </div>
    </div>
<% }) %>

<%}%>

<form action="/categories/<%=category.id%>/?_method=DELETE" method="POST">
    <input class="btn btn-success" type="submit" value="Delete this category">
    <small class="form-text text-muted">Any recipes associated with this category will still remain in your saved recipes library.</small>
</form>


