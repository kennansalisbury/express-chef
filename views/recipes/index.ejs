<h1 class="text-secondary">all saved recipes </h1>

<%if(!recipes.length){%>
    <p>No recipes saved currently</p>
    <a href="/recipes/search" class="btn btn-info">Search for Recipes</a>
<%} else {%>

<a class="btn btn-info mb-1" href="/categories">View By Category</a>

<% recipes.forEach(recipe => { %>
    <div class="card mb-3" style="max-width: 640px;">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="<%=recipe.imageUrl%>" class="card-img img-fluid" alt="<%= recipe.title %>-img">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= recipe.title %></h5>
                    <p class="card-text"><%= recipe.source %></p>
                    <div class="row">
                        <a href="/recipes/<%= recipe.id%>" class="btn btn-danger col-4">View Full Recipe</a>
                        <form action="/recipes/<%=recipe.id%>/?_method=DELETE" class="col-4" method="POST">
                            <input type="submit" class="btn btn-secondary" value="Delete Recipe">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% }) %>
<%}%>

